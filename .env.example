# PostgreSQL Connection (Neon, Supabase, etc)
DATABASE_URL="postgresql://user:password@host:port/database?sslmode=require"

# Para migrações, use a URL sem pgbouncer (se aplicável)
DATABASE_URL_UNPOOLED="postgresql://user:password@host-unpooled:port/database?sslmode=require"

